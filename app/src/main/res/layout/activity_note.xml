<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color0"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backButton"
            android:src="@drawable/ic_24px_black"
            style="@style/ImageIconStyle"/>

        <EditText
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:background="@android:color/white" />

        <ImageView
            android:id="@+id/editButton"
            android:background="@color/colorLight0"
            style="@style/ImageIconStyle"/>

        <ImageView
            android:id="@+id/checkButton"
            android:src="@drawable/ic_check_box_24px"
            style="@style/ImageIconStyle"/>

        <ImageView
            android:id="@+id/lockButton"
            android:src="@drawable/ic_lock_24px"
            style="@style/ImageIconStyle"/>

        <ImageView
            android:id="@+id/deleteButton"
            android:src="@drawable/ic_delete_24px"
            style="@style/ImageIconStyle"/>

    </LinearLayout>

    <TextView
        android:id="@+id/dateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="date"
        android:background="@color/colorLight0" />

    <com.superdroid.cnote.LinedEditText
        android:id="@+id/contentText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:background="@color/colorLight0"
        app:lineColor="@color/color0" />

</LinearLayout>